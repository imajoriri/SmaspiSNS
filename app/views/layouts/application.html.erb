<!DOCTYPE html>
<html>
  <head>
    <title>SmaspiSns</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <!-- aos -->
    <%#= javascript_include_tag "aos-master/dist/aos.js" %>
    <link rel="stylesheet" href="../node_modules/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../node_modules/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="../node_modules/admin-lte/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="../node_modules/admin-lte/dist/css/skins/skin-blue.min.css">
    <link rel="stylesheet" href="../node_modules/aos-master/dist/aos.css">

  </head>
  </head>

  <body>
    <div class="container-fluid">
      <div class=<%=is_home_index%>>
        <!-- hoem/indexの時だけ、ナビゲーションは、yieldの中に -->
        <% if not is_home_index? %>
          <%= render "/layouts/navigation" %>
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <%= yield %>
            </div>
          </div>
          <%= render "/layouts/footer" %>
        <% else %>
          <%= yield %>
          <%= render "/layouts/footer" %>
        <% end %>
      </div>
    </div>
    <script>
      AOS.init({
        easing: 'ease-in-out-sine'
      });
    </script>

  </body>
</html>
