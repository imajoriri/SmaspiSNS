
<%= form_for(@smaspi) do |f| %>
  <div class="form-group">
    <%= f.label :name, "ニックネーム" %>
    <%= f.text_field :name, class: "form-control", placeholder: "ニックネーム" %>
  </div>
  <div class="form-group">
    <label for="exampleInputFile">スマートスピーカーの画像を選択してください</label>
    <%= f.label :image, "画像を洗濯してください" %>
    <%= f.file_field :image %>
  </div>
  <%= f.submit "アカウント作成", class: "btn btn-default" %>
<% end %>

<%= link_to 'LOGOUT', destroy_test_user_session_path, method: :delete %>
